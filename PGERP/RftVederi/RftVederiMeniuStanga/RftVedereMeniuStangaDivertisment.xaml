<UserControl x:Class="PGERP.RftVederi.RftVedereMeniuStangaDivertisment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PGERP.RftVederi"
             xmlns:rftComponentePersonalizate="clr-namespace:PGERPComponentePersonalizate;assembly=PGERPComponentePersonalizate"
             mc:Ignorable="d" 
             d:DesignWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Style="{StaticResource RftStilComponentaMeniuStanga}"
                       Text="Filme">
            </TextBlock>

            <rftComponentePersonalizate:RftComponentaPersonalizataButonRadioImagine Grid.Column="1"
                                                                                    GroupName="One"
                                                                                    ImageSource="{StaticResource RftSursaImagineFilme}"
                                                                                    Command="{Binding RftComandaAccesareVedereContinutFilme}"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Style="{StaticResource RftStilComponentaMeniuStanga}"
                       Text="Muzica">
            </TextBlock>

            <rftComponentePersonalizate:RftComponentaPersonalizataButonRadioImagine Grid.Column="1"
                                                                                    GroupName="One"
                                                                                    ImageSource="{StaticResource RftSursaImagineMuzica}"
                                                                                    Command="{Binding RftComandaAccesareVedereContinutMuzica}"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Style="{StaticResource RftStilComponentaMeniuStanga}"
                       Text="Jocuri">
            </TextBlock>

            <rftComponentePersonalizate:RftComponentaPersonalizataButonRadioImagine Grid.Column="1"
                                                                                    GroupName="One"
                                                                                    ImageSource="{StaticResource RftSursaImagineJocuri}"
                                                                                    Command="{Binding RftComandaAccesareVedereContinutJocuri}"/>
        </Grid>
    </Grid>
</UserControl>
