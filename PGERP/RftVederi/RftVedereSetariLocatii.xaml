<UserControl x:Class="PGERP.RftVederi.RftVedereSetariLocatii"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:rftConvertori="clr-namespace:PGERP.RftConvertori"
             xmlns:rftComponentePersonalizate="clr-namespace:PGERPComponentePersonalizate;assembly=PGERPComponentePersonalizate"
             xmlns:local="clr-namespace:PGERP.RftVederi"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <rftConvertori:RftConvertorLungimeText x:Key="RftConvertorLungimeText"/>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Background="{DynamicResource RftPerieFundalMeniuTop}">

        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="{StaticResource RftPerieAutentificareFundalSecundar}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari x:Name="RftButonAnulare"
                                                                                     Grid.Column="0"
                                                                                     BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                                                                                     HorizontalAlignment="Right"
                                                                                     Content="Inapoi"
                                                                                     Width="125"
                                                                                     Margin="25 0 0 0"
                                                                                     Command="{Binding RftComandaAccesareVedereContinut}"
                                                                                     ImageSource="{StaticResource RftSursaImagineInapoi}"/>

            <Label Content="Administrare Locatii Documente"
                    Grid.Column="1"
                    Background="{StaticResource RftPerieAutentificareFundalSecundar}"
                    Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    FontSize="16"
                    FontFamily="Verdana"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Background="{DynamicResource RftPerieFundalMeniuTop}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="450"/>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        BorderThickness="10 0 0 0"
                        Margin="15 0 0 0"
                        Height="30"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        Background="{StaticResource RftPerieAutentificareFundalSecundar}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <SkewTransform AngleX="-25"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Border.Style>

                    <Label Content="Filtru locatii"
                            Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                            Background="{StaticResource RftPerieAutentificareFundalSecundar}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Margin="-15 0 0 0"
                            FontFamily="Verdana">
                        <Label.Style>
                            <Style TargetType="Label">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <SkewTransform AngleX="25"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Label.Style>
                    </Label>
                </Border>

                <TextBox x:Name="RftCasetaFiltruLocatii"
                        Grid.Column="1"
                        Height="30"
                        FontSize="16"
                        VerticalContentAlignment="Center"
                        BorderThickness="1"
                        Background="{StaticResource RftPerieAutentificareFundalSecundar}"
                        Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                        Text="{Binding RftFiltruLocatii,
                    UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0">
                </TextBox>

                <Border Grid.Column="3"
                        BorderThickness="10 0 0 0"
                        Margin="15 0 0 0"
                        Height="30"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        Background="{StaticResource RftPerieAutentificareFundalSecundar}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <SkewTransform AngleX="-25"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Border.Style>

                    <Label Content="Denumire"
                            Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                            Background="{StaticResource RftPerieAutentificareFundalSecundar}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Margin="-15 0 0 0"
                            FontFamily="Verdana">
                        <Label.Style>
                            <Style TargetType="Label">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <SkewTransform AngleX="25"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Label.Style>
                    </Label>
                </Border>

                <Border x:Name="RftGranitaNume"
                        Grid.Column="4"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="250"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        Margin="0 2 0 2">
                    <TextBox x:Name="RftCasetaDenumire"
                            Height="25"
                            FontSize="14"
                            VerticalContentAlignment="Center"
                            BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                            Text="{Binding RftDenumire}"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="4 0 10 0">
                    </TextBox>
                </Border>

                <Border Grid.Column="5"
                        BorderThickness="10 0 0 0"
                        Margin="15 0 0 0"
                        Height="30"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        Background="{StaticResource RftPerieAutentificareFundalSecundar}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <SkewTransform AngleX="-25"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Border.Style>

                    <Label Content="Locatie"
                            Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                            Background="{StaticResource RftPerieAutentificareFundalSecundar}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Margin="-15 0 0 0"
                            FontFamily="Verdana">
                        <Label.Style>
                            <Style TargetType="Label">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <SkewTransform AngleX="25"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Label.Style>
                    </Label>
                </Border>

                <Border x:Name="RftGranitaLocatie"
                        Grid.Column="6"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="450"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        Margin="0 2 0 2">
                    <TextBox x:Name="RftCasetaLocatie"
                            Height="25"
                             IsReadOnly="True"
                            FontSize="14"
                            VerticalContentAlignment="Center"
                            BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                            Text="{Binding RftLocatie}"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="4 0 10 0">
                    </TextBox>
                </Border>

                <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar Grid.Column="7"
                                                                                            ImageSource="{StaticResource RftSursaImagineLocatieDocumente}"
                                                                                            Command="{Binding RftComandaSelectareLocatie}">
                </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar>

                <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar Grid.Column="8"
                                                                                            ImageSource="{StaticResource RftSursaImagineCreare}"
                                                                                            Command="{Binding RftComandaAdaugareLocatieDocumente}">
                </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar>

            </Grid>

            <ScrollViewer Grid.Row="1">
                <Grid x:Name="RftTabelaLocatii"
                      Background="{DynamicResource RftPerieFundalGeneral}">
                    <DataGrid ItemsSource="{Binding RftLocatiiFiltrate}"
                          SelectedItem="{Binding RftLocatieSelectata}"
                          Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                          Background="{DynamicResource RftPerieFundalGeneral}"
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          VerticalAlignment="Stretch"
                          AutoGenerateColumns="False"
                          SelectionMode="Extended"
                          SelectionUnit="FullRow"
                          CanUserResizeRows="False"
                          HeadersVisibility="Column">
                        <DataGrid.Resources>
                            <ContextMenu x:Key="RftMeniuRand">
                                <MenuItem Header="Stergere"
                                      Command="{Binding DataContext.RftComandaStergereRand, 
                                    RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                      Icon="{StaticResource RftIcoanaStergereRand}"/>
                            </ContextMenu>
                        </DataGrid.Resources>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background"
                                    Value="Transparent"/>
                                <Setter Property="Foreground"
                                    Value="{DynamicResource RftPeriePrimPlanGeneral}"/>
                                <Setter Property="ContextMenu"
                                    Value="{StaticResource RftMeniuRand}"/>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Denumire"
                                            Binding="{Binding Denumire}"/>
                            <DataGridTextColumn Header="Locatie"
                                            Binding="{Binding Locatie}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </ScrollViewer>

            <TextBlock x:Name="RftMesajModificareEsuata"
                    Text="{Binding RftMesajStareModificareLocatie}"
                    TextAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Grid.Row="3"
                    Foreground="{StaticResource RftPerieAutentificareFundalGeneral}">
                <TextBlock.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding = "{Binding Text, 
                            ElementName=RftMesajModificareEsuata,
                            Converter={StaticResource RftConvertorLungimeText}}"
                                        Value = "true">
                                <Setter Property="TextBlock.Background">
                                    <Setter.Value>
                                        <LinearGradientBrush>
                                            <GradientStop Color="#ff3333" Offset="0"/>
                                            <GradientStop Color="#000000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Grid>

</UserControl>
