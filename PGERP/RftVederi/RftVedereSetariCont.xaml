<UserControl x:Class="PGERP.RftVederi.RftVedereSetariCont"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PGERP.RftVederi"
             xmlns:rftConvertori="clr-namespace:PGERP.RftConvertori"
             xmlns:rftComponentePersonalizate="clr-namespace:PGERPComponentePersonalizate;assembly=PGERPComponentePersonalizate"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <rftConvertori:RftConvertorLungimeText x:Key="RftConvertorLungimeText"/>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Background="{DynamicResource RftPerieFundalMeniuTop}">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="{StaticResource RftPerieAutentificareFundalSecundar}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari x:Name="RftButonAnulare"
                                                                                    Grid.Column="0"
                                                                                     BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                                                                                    HorizontalAlignment="Right"
                                                                                    Content="Inapoi"
                                                                                     Width="125"
                                                                                    Margin="25 0 0 0"
                                                                                    Command="{Binding RftComandaAccesareVedereContinut}"
                                                                                     ImageSource="{StaticResource RftSursaImagineInapoi}"/>

            <Label Content="Administrare Cont"
               Grid.Column="1"
               Background="{StaticResource RftPerieAutentificareFundalSecundar}"
               Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
               HorizontalContentAlignment="Left"
               VerticalContentAlignment="Center"
               FontSize="16"
               FontFamily="Verdana"/>
        </Grid>

        <Grid Grid.Row="2"
              Background="{StaticResource RftPerieAutentificareFundalSecundar}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari x:Name="RftButonAdaugare"
                                                                                    Grid.Column="0"
                                                                                     BorderBrush="{StaticResource RftPerieFundalSucces}"
                                                                                    HorizontalAlignment="Right"
                                                                                    Content="Modificare"
                                                                                     Width="160"
                                                                                    Margin="25 0 0 0"
                                                                                    Command="{Binding RftComandaModificareCont}"
                                                                                     ImageSource="{StaticResource RftSursaImagineModificareRand}"/>

            <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari x:Name="RftButonStergereCont"
                                                                                    Grid.Column="2"
                                                                                     BorderBrush="{StaticResource RftPerieFundalEroare}"
                                                                                    HorizontalAlignment="Left"
                                                                                    Content="Stergere Cont"
                                                                                     Width="175"
                                                                                    Margin="25 0 0 0"
                                                                                    Command="{Binding RftComandaStergereCont}"
                                                                                     ImageSource="{StaticResource RftSursaImagineIesireProgram}"/>
        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                 Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari Content="Nume"
                                                                                        Grid.Row="0"
                                                                                         BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                                                                                        Margin="-80 0 0 0"
                                                                                        Focusable="False"
                                                                                         Width="125"
                                                                                        ImageSource="{StaticResource RftSursaImagineAutentificareUtilizator}"/>

                <Border x:Name="RftGranitaNume"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="250"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        Margin="15 -3 0 0">
                    <TextBox x:Name="RftCasetaNume"
                            Height="25"
                            FontSize="14"
                            VerticalContentAlignment="Center"
                            BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                            Text="{Binding RftNume}"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="4 0 10 0">
                    </TextBox>
                </Border>
            </Grid>

            <Grid Grid.Row="0"
                  Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari Content="Prenume"
                                                                                        Grid.Row="0"
                                                                                         BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                                                                                        Margin="-165 0 0 0"
                                                                                        Focusable="False"
                                                                                         Width="150"
                                                                                        ImageSource="{StaticResource RftSursaImagineAutentificareUtilizator}"/>

                <Border x:Name="RftGranitaPrenume"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="350"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        Margin="5 -3 0 0">
                    <TextBox x:Name="RftCasetaPrenume"
                            Height="25"
                            FontSize="14"
                            VerticalContentAlignment="Center"
                            BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                            Text="{Binding RftPrenume}"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="4 0 10 0">
                    </TextBox>
                </Border>
            </Grid>

            <Grid Grid.Row="0"
                  Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari Content="Email" 
                                                                                        Grid.Row="0"
                                                                                         BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                                                                                        Margin="-197 0 0 0"
                                                                                        Focusable="False"
                                                                                         Width="125"
                                                                                        ImageSource="{StaticResource RftSursaImagineEmail}"/>

                <Border x:Name="RftGranitaEmail"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="350"
                        Grid.Row="2"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        Margin="0 -3 0 0">
                    <TextBox x:Name="RftCasetaEmail"
                            Height="25"
                            FontSize="14"
                            VerticalContentAlignment="Center"
                            BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                            Text="{Binding RftEmail}"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="4 0 10 0">
                    </TextBox>
                </Border>
            </Grid>

            <Grid Grid.Row="0"
                  Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <rftComponentePersonalizate:RftComponentaPersonalizataButonMeniuTop Content="Parola" 
                                                                                    Grid.Row="0"
                                                                                    Margin="33 0 0 0"
                                                                                    Focusable="False"
                                                                                    ImageSource="{StaticResource RftSursaImagineParola}"/>

                <Border x:Name="RftGranitaParola"
                        Grid.Row="1"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="165"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        Margin="5 -3 0 0">

                    <PasswordBox x:Name="RftCasetaParola"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 VerticalAlignment="Center"
                                 Height="25"
                                 BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                                 Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                                 Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                                 Margin="4 0 10 0" 
                                 PasswordChanged="RftCasetaParola_PasswordChanged" >
                    </PasswordBox>
                </Border>
            </Grid>

        </Grid>

        <TextBlock x:Name="RftMesajModificareEsuata"
                    Text="{Binding RftMesajStareModificareCont}"
                    TextAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Grid.Row="7"
                    Foreground="{StaticResource RftPerieAutentificareFundalGeneral}">
            <TextBlock.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding = "{Binding Text, 
                            ElementName=RftMesajModificareEsuata,
                            Converter={StaticResource RftConvertorLungimeText}}"
                                        Value = "true">
                            <Setter Property="TextBlock.Background">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#ff3333" Offset="0"/>
                                        <GradientStop Color="#000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <TextBlock x:Name="RftMesajModificareSucces"
                    Text="{Binding RftMesajStareModificareContSucces}"
                    TextAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Grid.Row="7"
                    Foreground="{StaticResource RftPerieAutentificareFundalGeneral}">
            <TextBlock.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding = "{Binding Text, 
                            ElementName=RftMesajModificareSucces,
                            Converter={StaticResource RftConvertorLungimeText}}"
                                        Value = "true">
                            <Setter Property="TextBlock.Background">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Color="{StaticResource RftCuloareFundalSucces}" Offset="0"/>
                                        <GradientStop Color="#000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>
