<UserControl x:Class="PGERP.RftVederi.RftVederiContinut.RftVederiActivitatiSportive.RftVedereActivitatiSportiveAdaugare"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PGERP.RftVederi.RftVederiContinut.RftVederiActivitatiSportive"
             xmlns:rftConvertori="clr-namespace:PGERP.RftConvertori"
             xmlns:rftComponentePersonalizate="clr-namespace:PGERPComponentePersonalizate;assembly=PGERPComponentePersonalizate"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <rftConvertori:RftConvertorLungimeText x:Key="RftConvertorLungimeText"/>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Background="{DynamicResource RftPerieFundalMeniuTop}">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1"
              Background="{StaticResource RftPerieAutentificareFundalSecundar}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari x:Name="RftButonAdaugare"
                                                                                    Grid.Column="0"
                                                                                     BorderBrush="{StaticResource RftPerieFundalSucces}"
                                                                                    HorizontalAlignment="Right"
                                                                                    Content="Adauga Rand"
                                                                                     Width="175"
                                                                                    Margin="25 0 0 0"
                                                                                    Command="{Binding RftComandaCreareContNou}"
                                                                                     ImageSource="{StaticResource RftSursaImagineCreare}"/>

            <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari x:Name="RftButonAnulare"
                                                                                    Grid.Column="1"
                                                                                     BorderBrush="{StaticResource RftPerieFundalEroare}"
                                                                                    HorizontalAlignment="Left"
                                                                                    Content="Anulare"
                                                                                     Width="125"
                                                                                    Margin="25 0 0 0"
                                                                                    Command="{Binding RftComandaCreareContNou}"
                                                                                     ImageSource="{StaticResource RftSursaImagineIesireProgram}"/>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="225"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                 Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari Content="Pret"
                                                                                        Grid.Row="0"
                                                                                         BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                                                                                        Margin="-30 0 0 0"
                                                                                        Focusable="False"
                                                                                         Width="100"
                                                                                        ImageSource="{StaticResource RftSursaImagineFacturi}"/>

                <Border x:Name="RftGranitaPret"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="165"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        Margin="5 -3 0 0">
                    <TextBox x:Name="RftCasetaPret"
                            Height="25"
                            FontSize="14"
                            VerticalContentAlignment="Center"
                            BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                            Text="{Binding RftPret}"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="4 0 10 0">
                    </TextBox>
                </Border>
            </Grid>

            <Grid Grid.Row="0"
                  Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari Content="Tranzactie"
                                                                                        Grid.Row="0"
                                                                                         BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                                                                                        Margin="-165 0 0 0"
                                                                                        Focusable="False"
                                                                                         Width="150"
                                                                                        ImageSource="{StaticResource RftSursaImagineTranzactie}"/>

                <Border x:Name="RftGranitaTranzactie"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="350"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        Margin="5 -3 0 0">
                    <TextBox x:Name="RftCasetaTranzactie"
                            Height="25"
                            FontSize="14"
                            VerticalContentAlignment="Center"
                            BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                            Text="{Binding RftTranzactie}"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="4 0 10 0">
                    </TextBox>
                </Border>
            </Grid>

            <Grid Grid.Row="0"
                  Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari Content="Locatie"
                                                                                        Grid.Row="0"
                                                                                         BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                                                                                        Margin="-195 0 0 0"
                                                                                        Focusable="False"
                                                                                         Width="120"
                                                                                        ImageSource="{StaticResource RftSursaImagineLocatie}"/>

                <Border x:Name="RftGranitaLocatie"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="350"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        Margin="5 -3 0 0">
                    <ComboBox ItemsSource="{Binding RftLocatii}"
                              SelectedValue="{Binding RftLocatieSelectata}"
                              HorizontalContentAlignment="Center"
                              VerticalContentAlignment="Center"
                              FontSize="14"
                              FontFamily="Verdana"
                              MaxDropDownHeight="100">
                    </ComboBox>
                </Border>
            </Grid>

            <Grid Grid.Row="2"
                Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari Content="Metoda Plata"
                                                                                        Grid.Row="0"
                                                                                         BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                                                                                        Margin="33 0 0 0"
                                                                                        Focusable="False"
                                                                                         Width="165"
                                                                                        ImageSource="{StaticResource RftSursaImagineMetodaPlata}"/>

                <Border x:Name="RftGranitaMetodaPlata"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="165"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        Margin="5 -3 0 0">
                    <ComboBox HorizontalContentAlignment="Center"
                              VerticalContentAlignment="Center"
                              FontSize="14"
                              FontFamily="Verdana">
                        <ComboBoxItem Content="Card"/>
                        <ComboBoxItem Content="Numerar"/>
                        <ComboBoxItem Content="Online"/>
                    </ComboBox>
                </Border>
            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari Content="Institutia Financiara" 
                                                                                        Grid.Row="0"
                                                                                         BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                                                                                        Margin="-97 0 0 0"
                                                                                        Focusable="False"
                                                                                         Width="225"
                                                                                        ImageSource="{StaticResource RftSursaImagineInstitutie}"/>

                <Border x:Name="RftGranitaInstitutiaFinanciara"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="350"
                        Grid.Row="2"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        Margin="0 -3 0 0">
                    <TextBox x:Name="RftCasetaInstitutiaFinanciara"
                            Height="25"
                            FontSize="14"
                            VerticalContentAlignment="Center"
                            BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                            Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                            Text="{Binding RftInstitutiaFinanciara}"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="4 0 10 0">
                    </TextBox>
                </Border>
            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari Content="Locatie Documente" 
                                                                                        Grid.Row="0"
                                                                                         BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                                                                                        Margin="-95 0 0 0"
                                                                                        Focusable="False"
                                                                                         Width="225"
                                                                                        ImageSource="{StaticResource RftSursaImagineLocatieDocumente}"/>

                <Border x:Name="RftGranitaLocatieDocumente"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="350"
                        Grid.Row="2"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        Margin="0 -3 0 0">
                    <ComboBox HorizontalContentAlignment="Center"
                              VerticalContentAlignment="Center"
                              FontSize="14"
                              FontFamily="Verdana">

                    </ComboBox>
                </Border>
            </Grid>

        </Grid>

        <Grid Grid.Row="5"
                  Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <rftComponentePersonalizate:RftComponentaPersonalizataEtichetaModificari Content="Notite" 
                                                                                        Grid.Row="0"
                                                                                         BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                                                                                        Margin="14 0 0 0"
                                                                                        Focusable="False"
                                                                                         Width="125"
                                                                                     HorizontalAlignment="Left"
                                                                                        ImageSource="{StaticResource RftSursaImagineNotite}"/>

            <Border x:Name="RftGranitaNotite"
                    Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                    Grid.Row="2"
                    BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                    BorderThickness="10 0 1 1"
                    Margin="0 -3 0 0">
                <TextBox x:Name="RftCasetaNotite"
                        FontSize="14"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Visible"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                        Text="{Binding RftNotite}"
                        Margin="4 0 10 0">
                </TextBox>
            </Border>
        </Grid>

        <TextBlock x:Name="RftMesajCreareContNou"
                    Text="{Binding RftMesajStareCreareContNou}"
                    TextAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Grid.Row="7"
                    Foreground="{StaticResource RftPerieAutentificareFundalGeneral}">
            <TextBlock.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding = "{Binding Text, 
                            ElementName=RftMesajCreareContNou,
                            Converter={StaticResource RftConvertorLungimeText}}"
                                        Value = "true">
                            <Setter Property="TextBlock.Background">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#ff3333" Offset="0"/>
                                        <GradientStop Color="#000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

    </Grid>
</UserControl>
