<UserControl x:Class="PGERP.RftVederi.RftVedereContinut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PGERP.RftVederi"
             xmlns:rftVederiContinut="clr-namespace:PGERP.RftVederi"
             xmlns:rftVederiModeleContinut="clr-namespace:PGERP.RftVederiModele.RftVederiModeleContinut"
             xmlns:rftVederiModeleContinutPrincipal="clr-namespace:PGERP.RftVederiModele"
             xmlns:rftConvertori="clr-namespace:PGERP.RftConvertori"
             xmlns:rftHarti="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
             mc:Ignorable="d">

    <UserControl.Resources>
        <rftConvertori:RftConvertorBuget x:Key="RftConvertorBuget"/>
        <rftConvertori:RftConvertorLungimeText x:Key="RftConvertorLungimeText"/>
        <rftConvertori:RftConvertorMultipluBuget x:Key="RftConvertorMultipluBuget"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="auto"
                           Style="{StaticResource RftExtensieRand}"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="{DynamicResource RftPerieFundalMeniuTop}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="225"/>
                <ColumnDefinition Width="125"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="125"/>
                <ColumnDefinition Width="125"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderThickness="10 0 0 0"
                    Margin="15 0 0 0"
                    Height="30"
                    BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                    Background="{StaticResource RftPerieAutentificareFundalSecundar}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <SkewTransform AngleX="-25"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Border.Style>

                <Label Content="Buget Total Alocat"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       Background="{StaticResource RftPerieAutentificareFundalSecundar}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="-15 0 0 0"
                       FontFamily="Verdana">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <SkewTransform AngleX="25"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Label.Style>
                </Label>
            </Border>

            <Border Grid.Column="1"
                    BorderThickness="10 0 0 0"
                    Margin="10 0 0 0"
                    Height="30"
                    BorderBrush="{StaticResource RftPerieFundalSucces}"
                    Background="{StaticResource RftPerieAutentificareFundalSecundar}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <SkewTransform AngleX="-25"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Border.Style>

                <Label Content="{Binding RftBugetTotalActual}"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       Background="{StaticResource RftPerieAutentificareFundalSecundar}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="-15 0 0 0"
                       FontFamily="Verdana">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <SkewTransform AngleX="25"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Label.Style>
                </Label>
            </Border>

            <Border Grid.Column="3"
                    BorderThickness="10 0 0 0"
                    Margin="25 0 0 0"
                    Height="30"
                    BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                    Background="{StaticResource RftPerieAutentificareFundalSecundar}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <SkewTransform AngleX="-25"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Border.Style>

                <Label Content="Buget Nealocat"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       Background="{StaticResource RftPerieAutentificareFundalSecundar}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="-15 0 0 0"
                       FontFamily="Verdana">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <SkewTransform AngleX="25"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Label.Style>
                </Label>
            </Border>

            <Border Grid.Column="4"
                    BorderThickness="10 0 0 0"
                    Margin="10 0 0 0"
                    Height="30"
                    BorderBrush="{StaticResource RftPerieFundalSucces}"
                    Background="{StaticResource RftPerieAutentificareFundalSecundar}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <SkewTransform AngleX="-25"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Border.Style>

                <Label x:Name="RftBugetNealocatActual"
                       Content="{Binding RftBugetNealocatActual}"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       Background="{StaticResource RftPerieAutentificareFundalSecundar}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="-15 0 0 0"
                       FontFamily="Verdana">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <SkewTransform AngleX="25"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Label.Style>
                </Label>
            </Border>

            <TextBox x:Name="RftCasetaBugetNealocat"
                     Grid.Column="5"
                     Height="30"
                     FontSize="16"
                     VerticalContentAlignment="Center"
                     BorderThickness="1"
                     Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                     Text="{Binding RftBugetNealocatTemporar, UpdateSourceTrigger=PropertyChanged}"
                     TextAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="0">

                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding RftComandaSetareBugetNealocat}" Key="Enter" />
                </TextBox.InputBindings>

                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Background"
                                Value="Transparent"/>
                        <Style.Triggers>
                            <DataTrigger Binding = "{Binding Text, 
                            ElementName=RftCasetaBugetNealocat,
                            Converter={StaticResource RftConvertorBuget}}"
                                     Value = "true">
                                <Setter Property="TextBox.Background">
                                    <Setter.Value>
                                        <LinearGradientBrush>
                                            <GradientStop Color="{StaticResource RftCuloareFundalEroare}" Offset="0"/>
                                            <GradientStop Color="#000000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding = "{Binding Text, 
                            ElementName=RftCasetaBugetNealocat,
                            Converter={StaticResource RftConvertorBuget}}"
                                     Value = "false">
                                <Setter Property="TextBox.Background">
                                    <Setter.Value>
                                        <LinearGradientBrush>
                                            <GradientStop Color="{StaticResource RftCuloareFundalSucces}" Offset="0"/>
                                            <GradientStop Color="#000000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <TextBlock x:Name="RftMesajEroare"
                   Text="{Binding RftMesajEroare}"
                   TextAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   Grid.Column="6"
                   Foreground="{StaticResource RftPerieAutentificareFundalGeneral}">
                <TextBlock.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding = "{Binding Text, 
                            ElementName=RftMesajEroare,
                            Converter={StaticResource RftConvertorLungimeText}}"
                                     Value = "true">
                                <Setter Property="TextBlock.Background">
                                    <Setter.Value>
                                        <LinearGradientBrush>
                                            <GradientStop Color="#ff3333" Offset="0"/>
                                            <GradientStop Color="#000000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

        </Grid>

        <Expander Grid.Row="1"
                  x:Name="Expander" 
                  MaxHeight="350"
                  Margin="0 5 0 5"
                  Header="Distributie Buget"
                  FontSize="16"
                  FontFamily="Verdana"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"
                  Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                  IsExpanded="{Binding RftRandExtins}">
            <Expander.Style>
                <Style TargetType="Expander">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush>
                                <GradientStop Color="{StaticResource RftCuloareAutentificareFundalSecundar}" Offset="0"/>
                                <GradientStop Color="{DynamicResource RftCuloareFundalMeniuTop}" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Expander.Style>

            <Grid Width="1855"
                          Height="280"
                          Background="{StaticResource RftPerieAutentificareFundalSecundar}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="175"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="175"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="125"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0"
                       Grid.Row="0"
                       Content="Cumparaturi"
                       BorderThickness="10 0 0 0"
                       BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="10 0 0 0"
                       FontFamily="Verdana">
                </Label>

                <Label x:Name="RftBugetCumparaturiActual"
                       Grid.Column="1"
                       Grid.Row="0"
                       Content="{Binding RftBugetCumparaturiActual}"
                       BorderThickness="10 0 0 0"
                       BorderBrush="{StaticResource RftPerieFundalSucces}"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="10 0 0 0"
                       FontFamily="Verdana">
                </Label>

                <Label Grid.Column="3"
                       Grid.Row="0"
                       Content="Alimente"
                       BorderThickness="10 0 0 0"
                       BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="10 0 0 0"
                       FontFamily="Verdana">
                </Label>

                <Label Grid.Column="4"
                       Grid.Row="0"
                       Content="{Binding RftBugetAlimenteActual}"
                       BorderThickness="10 0 0 0"
                       BorderBrush="{StaticResource RftPerieFundalSucces}"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="10 0 0 0"
                       FontFamily="Verdana">
                </Label>

                <TextBox x:Name="RftCasetaBugetAlimente"
                         Grid.Column="5"
                         Grid.Row="0"
                         Height="30"
                         FontSize="16"
                         VerticalContentAlignment="Center"
                         BorderThickness="1"
                         Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                         Text="{Binding RftBugetAlimenteTemporar, UpdateSourceTrigger=PropertyChanged}"
                         TextAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0">

                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding RftComandaSetareBugetAlimente}"
                                    Key="Enter" />
                    </TextBox.InputBindings>

                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Value="true">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource RftConvertorMultipluBuget}">
                                            <Binding Path="RftBugetNealocatActual"/>
                                            <Binding ElementName="RftCasetaBugetAlimente" Path="Text"/>
                                            <Binding Path="RftBugetAlimenteActual"/>
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <DataTrigger.Setters>
                                        <Setter Property="TextBox.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush>
                                                    <GradientStop Color="{StaticResource RftCuloareFundalEroare}" Offset="0"/>
                                                    <GradientStop Color="#000000" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger.Setters>
                                </DataTrigger>
                                <DataTrigger Value="false">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource RftConvertorMultipluBuget}">
                                            <Binding Path="RftBugetNealocatActual"/>
                                            <Binding ElementName="RftCasetaBugetAlimente" Path="Text"/>
                                            <Binding Path="RftBugetAlimenteActual"/>
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <DataTrigger.Setters>
                                        <Setter Property="TextBox.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush>
                                                    <GradientStop Color="{StaticResource RftCuloareFundalSucces}" Offset="0"/>
                                                    <GradientStop Color="#000000" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger.Setters>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Label Grid.Column="7"
                       Grid.Row="0"
                       Content="Electronice"
                       BorderThickness="10 0 0 0"
                       BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="10 0 0 0"
                       FontFamily="Verdana">
                </Label>

                <TextBox x:Name="RftCasetaBugetElectronice"
                         Grid.Column="9"
                         Grid.Row="0"
                         Height="30"
                         FontSize="16"
                         VerticalContentAlignment="Center"
                         BorderThickness="1"
                         Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                         Text="{Binding RftBugetElectroniceTemporar, UpdateSourceTrigger=PropertyChanged}"
                         TextAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0">

                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding RftComandaSetareBugetElectronice}"
                                    Key="Enter" />
                    </TextBox.InputBindings>

                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Value="true">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource RftConvertorMultipluBuget}">
                                            <Binding Path="RftBugetNealocatActual"/>
                                            <Binding ElementName="RftCasetaBugetElectronice" Path="Text"/>
                                            <Binding Path="RftBugetElectroniceActual"/>
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <DataTrigger.Setters>
                                        <Setter Property="TextBox.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush>
                                                    <GradientStop Color="{StaticResource RftCuloareFundalEroare}" Offset="0"/>
                                                    <GradientStop Color="#000000" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger.Setters>
                                </DataTrigger>
                                <DataTrigger Value="false">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource RftConvertorMultipluBuget}">
                                            <Binding Path="RftBugetNealocatActual"/>
                                            <Binding ElementName="RftCasetaBugetElectronice" Path="Text"/>
                                            <Binding Path="RftBugetElectroniceActual"/>
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <DataTrigger.Setters>
                                        <Setter Property="TextBox.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush>
                                                    <GradientStop Color="{StaticResource RftCuloareFundalSucces}" Offset="0"/>
                                                    <GradientStop Color="#000000" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger.Setters>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Label Grid.Column="8"
                       Grid.Row="0"
                       Content="{Binding RftBugetElectroniceActual}"
                       BorderThickness="10 0 0 0"
                       BorderBrush="{StaticResource RftPerieFundalSucces}"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="10 0 0 0"
                       FontFamily="Verdana">
                </Label>

                <Label Grid.Column="11"
                               Grid.Row="0"
                               Content="Imbracaminte"
                               BorderThickness="10 0 0 0"
                               BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                               Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Margin="10 0 0 0"
                               FontFamily="Verdana">
                </Label>

                <Label Grid.Column="12"
                       Grid.Row="0"
                       Content="{Binding RftBugetImbracaminteActual}"
                       BorderThickness="10 0 0 0"
                       BorderBrush="{StaticResource RftPerieFundalSucces}"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="10 0 0 0"
                       FontFamily="Verdana">
                </Label>

                <TextBox x:Name="RftCasetaBugetImbracaminte"
                         Grid.Column="13"
                         Grid.Row="0"
                         Height="30"
                         FontSize="16"
                         VerticalContentAlignment="Center"
                         BorderThickness="1"
                         Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                         Text="{Binding RftBugetImbracaminteTemporar, UpdateSourceTrigger=PropertyChanged}"
                         TextAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0">

                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding RftComandaSetareBugetImbracaminte}"
                                    Key="Enter" />
                    </TextBox.InputBindings>

                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Value="true">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource RftConvertorMultipluBuget}">
                                            <Binding Path="RftBugetNealocatActual"/>
                                            <Binding ElementName="RftCasetaBugetImbracaminte" Path="Text"/>
                                            <Binding Path="RftBugetImbracaminteActual"/>
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <DataTrigger.Setters>
                                        <Setter Property="TextBox.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush>
                                                    <GradientStop Color="{StaticResource RftCuloareFundalEroare}" Offset="0"/>
                                                    <GradientStop Color="#000000" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger.Setters>
                                </DataTrigger>
                                <DataTrigger Value="false">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource RftConvertorMultipluBuget}">
                                            <Binding Path="RftBugetNealocatActual"/>
                                            <Binding ElementName="RftCasetaBugetImbracaminte" Path="Text"/>
                                            <Binding Path="RftBugetImbracaminteActual"/>
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <DataTrigger.Setters>
                                        <Setter Property="TextBox.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush>
                                                    <GradientStop Color="{StaticResource RftCuloareFundalSucces}" Offset="0"/>
                                                    <GradientStop Color="#000000" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger.Setters>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>


                <Label Grid.Column="0"
                       Grid.Row="1"
                       Content="Divertisment"
                       BorderThickness="10 0 0 0"
                       BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="10 0 0 0"
                       FontFamily="Verdana">
                </Label>

                <Label x:Name="RftBugetDivertismentActual"
                       Grid.Column="1"
                       Grid.Row="1"
                       Content="{Binding RftBugetDivertismentActual}"
                       BorderThickness="10 0 0 0"
                       BorderBrush="{StaticResource RftPerieFundalSucces}"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="10 0 0 0"
                       FontFamily="Verdana">
                </Label>

                <Label Grid.Column="3"
                               Grid.Row="1"
                               Content="Filme"
                               BorderThickness="10 0 0 0"
                               BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                               Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Margin="10 0 0 0"
                               FontFamily="Verdana">
                </Label>

                <Label Grid.Column="4"
                       Grid.Row="1"
                       Content="{Binding RftBugetFilmeActual}"
                       BorderThickness="10 0 0 0"
                       BorderBrush="{StaticResource RftPerieFundalSucces}"
                       Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="10 0 0 0"
                       FontFamily="Verdana">
                </Label>

                <TextBox x:Name="RftCasetaBugetFilme"
                         Grid.Column="5"
                         Grid.Row="1"
                         Height="30"
                         FontSize="16"
                         VerticalContentAlignment="Center"
                         BorderThickness="1"
                         Foreground="{StaticResource RftPerieFundalConstatntaDeschisa}"
                         Text="{Binding RftBugetFilmeTemporar, UpdateSourceTrigger=PropertyChanged}"
                         TextAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0">

                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding RftComandaSetareBugetFilme}"
                                    Key="Enter" />
                    </TextBox.InputBindings>

                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Value="true">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource RftConvertorMultipluBuget}">
                                            <Binding Path="RftBugetNealocatActual"/>
                                            <Binding ElementName="RftCasetaBugetFilme" Path="Text"/>
                                            <Binding Path="RftBugetFilmeActual"/>
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <DataTrigger.Setters>
                                        <Setter Property="TextBox.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush>
                                                    <GradientStop Color="{StaticResource RftCuloareFundalEroare}" Offset="0"/>
                                                    <GradientStop Color="#000000" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger.Setters>
                                </DataTrigger>
                                <DataTrigger Value="false">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource RftConvertorMultipluBuget}">
                                            <Binding Path="RftBugetNealocatActual"/>
                                            <Binding ElementName="RftCasetaBugetFilme" Path="Text"/>
                                            <Binding Path="RftBugetFilmeActual"/>
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <DataTrigger.Setters>
                                        <Setter Property="TextBox.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush>
                                                    <GradientStop Color="{StaticResource RftCuloareFundalSucces}" Offset="0"/>
                                                    <GradientStop Color="#000000" Offset="1"/>
