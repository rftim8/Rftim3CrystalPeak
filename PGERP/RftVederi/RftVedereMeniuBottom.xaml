<UserControl x:Class="PGERP.RftVederi.RftVedereMeniuBottom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PGERP.RftVederi"
             xmlns:rftComponentePersonalizate="clr-namespace:PGERPComponentePersonalizate;assembly=PGERPComponentePersonalizate"
             mc:Ignorable="d" 
             d:DesignHeight="30">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <rftComponentePersonalizate:RftComponentaPersonalizataButonTimp Grid.Column="1"
                                                                        Content="{Binding RftTimpCurent}"
                                                                        Command="{Binding RftComandaCopiereTimp}">
            <rftComponentePersonalizate:RftComponentaPersonalizataButonTimp.ToolTip>
                <ToolTip Placement="MousePoint">
                    <TextBlock Text="{Binding RftMesajCopiere}"/>
                </ToolTip>
            </rftComponentePersonalizate:RftComponentaPersonalizataButonTimp.ToolTip>
        </rftComponentePersonalizate:RftComponentaPersonalizataButonTimp>
    </Grid>
</UserControl>
