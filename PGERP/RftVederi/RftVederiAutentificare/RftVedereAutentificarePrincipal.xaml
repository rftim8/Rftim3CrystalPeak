<UserControl x:Class="PGERP.RftVederi.RftVederiAutentificare.RftVedereAutentificarePrincipal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PGERP.RftVederi.RftVederiAutentificare"
             xmlns:rftComponentePersonalizate="clr-namespace:PGERPComponentePersonalizate;assembly=PGERPComponentePersonalizate"
             xmlns:rftConvertori="clr-namespace:PGERP.RftConvertori"
             mc:Ignorable="d" 
             d:DesignHeight="500"
             d:DesignWidth="850"
             FontFamily="Verdana"
             FocusManager.FocusedElement="{Binding ElementName=RftCasetaUtilizator}">

    <UserControl.Resources>
        <rftConvertori:RftConvertorLungimeText x:Key="RftConvertorLungimeText"/>
    </UserControl.Resources>

    <Grid Width="850"
          Height="500" 
          MouseLeftButtonDown="Grid_MouseLeftButtonDown">

        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="{StaticResource RftCuloareAutentificarePrimPlanGeneral}" Offset="0"/>
                <GradientStop Color="{StaticResource RftCuloareAutentificareFundalGeneral}" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.Clip>
            <PathGeometry>
                <PathGeometry.Figures>
                    <PathFigure StartPoint="50,0">
                        <PathFigure.Segments>
                            <LineSegment Point="800,0"/>
                            <LineSegment Point="850,50"/>
                            <LineSegment Point="850,450"/>
                            <LineSegment Point="800, 500"/>
                            <LineSegment Point="50, 500"/>
                            <LineSegment Point="0, 450"/>
                            <LineSegment Point="0, 50"/>
                        </PathFigure.Segments>
                    </PathFigure>
                </PathGeometry.Figures>
            </PathGeometry>
        </Grid.Clip>

        <Grid.Effect>
            <DropShadowEffect BlurRadius="20"
                              Color="{StaticResource RftCuloareAutentificareFundalSecundar}"
                              Opacity="0.3"
                              Direction="0"
                              ShadowDepth="0"/>
        </Grid.Effect>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Width="750">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" 
                   Source="{StaticResource RftSursaImagineUtilizator}"/>

            <TextBlock Grid.Column="1" 
                       VerticalAlignment="Bottom"
                       Text="{Binding RftVerisuneProgram}"
                       FontSize="14"/>

            <Border Grid.Column="3"
                    Width="200"
                    HorizontalAlignment="Left">
                <Button x:Name="RftButonContNou"
                    Content="Cont Nou"
                    TabIndex="3"
                    Margin="40 0 0 0"
                    SnapsToDevicePixels="True"
                    Command="{Binding RftComandaAccesareVedereContNou}"
                    Style="{StaticResource RftStilButonContNou}" />
            </Border>

            <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar Grid.Column="4"
                                                                                    ImageSource="{StaticResource RftSursaImagineDocumentatie}"
                                                                                    Command="{Binding RftComandaDocumentatieAutentificare}">
                <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar.ToolTip>
                    <ToolTip Placement="MousePoint">
                        <TextBlock Text="{Binding RftMesajDocumentatie}"/>
                    </ToolTip>
                </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar.ToolTip>
            </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar>


            <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar Grid.Column="5"
                                                                                    ImageSource="{StaticResource RftSursaImagineMinimizareFereastra}"
                                                                                    Command="{Binding RftComandaMinimizareFereastra}">
                <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar.ToolTip>
                    <ToolTip Placement="MousePoint">
                        <TextBlock Text="{Binding RftMesajMinimizare}"/>
                    </ToolTip>
                </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar.ToolTip>
            </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar>


            <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitar Grid.Column="6"
                                                                            ImageSource="{StaticResource RftSursaImagineIesireProgram}"
                                                                            Command="{Binding RftComandaIesireProgram}">
                <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitar.ToolTip>
                    <ToolTip Placement="MousePoint">
                        <TextBlock Text="{Binding RftMesajIesire}"/>
                    </ToolTip>
                </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitar.ToolTip>
            </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitar>
        </Grid>

        <rftComponentePersonalizate:RftComponentaPersonalizataButonMeniuTop Content="Utilizator"
                                                                            Grid.Row="2"
                                                                            Margin="33 0 0 0"
                                                                            SnapsToDevicePixels="True"
                                                                            Focusable="False"
                                                                            ImageSource="{StaticResource RftSursaImagineAutentificareUtilizator}"/>

        <Border x:Name="RftGranitaUtilizator"
                Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                Height="35"
                Width="165"
                Grid.Row="3"
                VerticalAlignment="Center"
                BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                BorderThickness="10 0 1 1"
                SnapsToDevicePixels="True"
                Margin="5 -3 0 0">
            <TextBox x:Name="RftCasetaUtilizator"
                     Height="25"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                     Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                     Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                     Text="{Binding RftUtilizator}"
                     TextAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="4 0 10 0">
            </TextBox>
        </Border>


        <rftComponentePersonalizate:RftComponentaPersonalizataButonMeniuTop Content="Parola" 
                                                                            Grid.Row="5"
                                                                            Margin="33 0 0 0"
                                                                            SnapsToDevicePixels="True"
                                                                            Focusable="False"
                                                                            ImageSource="{StaticResource RftSursaImagineParola}"/>

        <Border x:Name="RftGranitaParola"
                Grid.Row="6"
                Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                Height="35"
                Width="165"
                VerticalAlignment="Center"
                BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                BorderThickness="10 0 1 1"
                SnapsToDevicePixels="True"
                Margin="5 -3 0 0">

            <PasswordBox x:Name="RftCasetaParola"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         Height="25"
                         BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                         Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                         Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                         HorizontalContentAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="4 0 10 0" 
                         PasswordChanged="RftCasetaParola_PasswordChanged">
                <PasswordBox.InputBindings>
                    <KeyBinding Key="Return"
                                Command="{Binding RftComandaAutentificare}"/>
                </PasswordBox.InputBindings>
            </PasswordBox>
        </Border>

        <Border Grid.Row="8"
                    Width="200">
            <Button x:Name="RftButonAutentificare"
                    Content="Autentificare"
                    TabIndex="2"
                    Margin="25 0 0 0"
                    SnapsToDevicePixels="True"
                    Command="{Binding RftComandaAutentificare}"
                    Style="{StaticResource RftStilButonAutentificare}" 
                    LostFocus="RftButonAutentificare_LostFocus"/>
        </Border>

        <TextBlock x:Name="RftMesajAutentificare"
                   Text="{Binding RftMesajStareAutentificare}"
                   TextAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   Grid.Row="10"
                   Foreground="{StaticResource RftPerieAutentificareFundalGeneral}">
            <TextBlock.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding = "{Binding Text, 
                            ElementName=RftMesajAutentificare,
                            Converter={StaticResource RftConvertorLungimeText}}"
                                     Value = "true">
                            <Setter Property="TextBlock.Background">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#ff3333" Offset="0"/>
                                        <GradientStop Color="#000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>
