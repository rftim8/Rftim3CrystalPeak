<UserControl x:Class="PGERP.RftVederi.RftVederiAutentificare.RftVedereAutentificareContNou"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PGERP.RftVederi.RftVederiAutentificare"
             xmlns:rftComponentePersonalizate="clr-namespace:PGERPComponentePersonalizate;assembly=PGERPComponentePersonalizate"
             xmlns:rftConvertori="clr-namespace:PGERP.RftConvertori"
             mc:Ignorable="d" 
             d:DesignHeight="500"
             d:DesignWidth="850"
             FontFamily="Verdana">

    <UserControl.Resources>
        <rftConvertori:RftConvertorLungimeText x:Key="RftConvertorLungimeText"/>
    </UserControl.Resources>

    <Grid Width="850"
          Height="500" 
          MouseLeftButtonDown="Grid_MouseLeftButtonDown">

        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="{StaticResource RftCuloareAutentificarePrimPlanGeneral}" Offset="0"/>
                <GradientStop Color="{StaticResource RftCuloareAutentificareFundalGeneral}" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.Clip>
            <PathGeometry>
                <PathGeometry.Figures>
                    <PathFigure StartPoint="50,0">
                        <PathFigure.Segments>
                            <LineSegment Point="800,0"/>
                            <LineSegment Point="850,50"/>
                            <LineSegment Point="850,450"/>
                            <LineSegment Point="800, 500"/>
                            <LineSegment Point="50, 500"/>
                            <LineSegment Point="0, 450"/>
                            <LineSegment Point="0, 50"/>
                        </PathFigure.Segments>
                    </PathFigure>
                </PathGeometry.Figures>
            </PathGeometry>
        </Grid.Clip>

        <Grid.Effect>
            <DropShadowEffect BlurRadius="20"
                              Color="{StaticResource RftCuloareAutentificareFundalSecundar}"
                              Opacity="0.3"
                              Direction="0"
                              ShadowDepth="0"/>
        </Grid.Effect>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Width="750">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" 
                   Source="{StaticResource RftSursaImagineUtilizator}"/>

            <TextBlock Grid.Column="1" 
                       VerticalAlignment="Bottom"
                       Text="{Binding RftVerisuneProgram}"
                       FontSize="14"/>

            <Border Grid.Column="3"
                    Width="200"
                    HorizontalAlignment="Left">
                <Button x:Name="RftButonInapoiAutentificare"
                    Content="Inapoi"
                    TabIndex="3"
                    Margin="80 0 0 0"
                    SnapsToDevicePixels="True"
                    Command="{Binding RftComandaAccesareVedereAutentificare}"
                    Style="{StaticResource RftStilButonContNou}" />
            </Border>

            <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar Grid.Column="4"
                                                                                    ImageSource="{StaticResource RftSursaImagineDocumentatie}"
                                                                                    Command="{Binding RftComandaDocumentatieContNou}">
                <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar.ToolTip>
                    <ToolTip Placement="MousePoint">
                        <TextBlock Text="{Binding RftMesajContNou}"/>
                    </ToolTip>
                </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar.ToolTip>
            </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar>

            <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar Grid.Column="5"
                                                                                    ImageSource="{StaticResource RftSursaImagineMinimizareFereastra}"
                                                                                    Command="{Binding RftComandaMinimizareFereastra}">
                <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar.ToolTip>
                    <ToolTip Placement="MousePoint">
                        <TextBlock Text="{Binding RftMesajMinimizare}"/>
                    </ToolTip>
                </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar.ToolTip>
            </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitarSecundar>


            <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitar Grid.Column="6"
                                                                            ImageSource="{StaticResource RftSursaImagineIesireProgram}"
                                                                            Command="{Binding RftComandaIesireProgram}">
                <rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitar.ToolTip>
                    <ToolTip Placement="MousePoint">
                        <TextBlock Text="{Binding RftMesajIesire}"/>
                    </ToolTip>
                </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitar.ToolTip>
            </rftComponentePersonalizate:RftComponentaPersonalizataButonUtilitar>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="225"/>
                <ColumnDefinition Width="225"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <rftComponentePersonalizate:RftComponentaPersonalizataButonMeniuTop Content="Prenume"
                                                                            Grid.Row="0"
                                                                            Margin="33 0 0 0"
                                                                            SnapsToDevicePixels="True"
                                                                            Focusable="False"
                                                                            ImageSource="{StaticResource RftSursaImagineAutentificareUtilizator}"/>

                <Border x:Name="RftGranitaPrenume"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="165"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        SnapsToDevicePixels="True"
                        Margin="5 -3 0 0">
                    <TextBox x:Name="RftCasetaPrenume"
                             Height="25"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                             Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                             Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                             Text="{Binding RftPrenume}"
                             TextAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="4 0 10 0">
                    </TextBox>
                </Border>
            </Grid>

            <Grid Grid.Row="0"
                  Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <rftComponentePersonalizate:RftComponentaPersonalizataButonMeniuTop Content="Nume"
                                                                                    Grid.Row="0"
                                                                                    Margin="33 0 0 0"
                                                                                    SnapsToDevicePixels="True"
                                                                                    Focusable="False"
                                                                                    ImageSource="{StaticResource RftSursaImagineAutentificareUtilizator}"/>

                <Border x:Name="RftGranitaNume"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="165"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        SnapsToDevicePixels="True"
                        Margin="5 -3 0 0">
                    <TextBox x:Name="RftCasetaNume"
                             Height="25"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                             Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                             Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                             Text="{Binding RftNume}"
                             TextAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="4 0 10 0">
                    </TextBox>
                </Border>
            </Grid>

            <Grid Grid.Row="0"
                  Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <rftComponentePersonalizate:RftComponentaPersonalizataButonMeniuTop Content="Email"
                                                                                    Grid.Row="0"
                                                                                    Margin="-150 0 0 0"
                                                                                    SnapsToDevicePixels="True"
                                                                                    Focusable="False"
                                                                                    ImageSource="{StaticResource RftSursaImagineEmail}"/>

                <Border x:Name="RftGranitaEmail"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="350"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        SnapsToDevicePixels="True"
                        Margin="5 -3 0 0">
                    <TextBox x:Name="RftCasetaEmail"
                             Height="25"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                             Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                             Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                             Text="{Binding RftEmail}"
                             TextAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="4 0 10 0">
                    </TextBox>
                </Border>
            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <rftComponentePersonalizate:RftComponentaPersonalizataButonMeniuTop Content="Utilizator"
                                                                                    Grid.Row="0"
                                                                                    Margin="33 0 0 0"
                                                                                    SnapsToDevicePixels="True"
                                                                                    Focusable="False"
                                                                                    ImageSource="{StaticResource RftSursaImagineAutentificareUtilizator}"/>

                <Border x:Name="RftGranitaUtilizator"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="165"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        SnapsToDevicePixels="True"
                        Margin="5 -3 0 0">
                    <TextBox x:Name="RftCasetaUtilizator"
                             Height="25"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                             Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                             Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                             Text="{Binding RftUtilizator}"
                             TextAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="4 0 10 0">
                    </TextBox>
                </Border>
            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <rftComponentePersonalizate:RftComponentaPersonalizataButonMeniuTop Content="Parola" 
                                                                                    Grid.Row="0"
                                                                                    Margin="33 0 0 0"
                                                                                    SnapsToDevicePixels="True"
                                                                                    Focusable="False"
                                                                                    ImageSource="{StaticResource RftSursaImagineParola}"/>

                <Border x:Name="RftGranitaParola"
                        Grid.Row="1"
                        Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                        Height="35"
                        Width="165"
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource RftPerieAutentificareFundalSecundar}"
                        BorderThickness="10 0 1 1"
                        SnapsToDevicePixels="True"
                        Margin="5 -3 0 0">

                    <PasswordBox x:Name="RftCasetaParola"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 Height="25"
                                 BorderBrush="{StaticResource RftPerieAutentificareFundalGeneral}"
                                 Background="{StaticResource RftPerieAutentificareFundalGeneral}"
                                 Foreground="{StaticResource RftPerieAutentificarePrimPlanGeneral}"
                                 HorizontalContentAlignment="Center"
                                 VerticalAlignment="Center"
                                 Margin="4 0 10 0" 
                                 PasswordChanged="RftCasetaParola_PasswordChanged" >
                    </PasswordBox>
                </Border>
            </Grid>

        </Grid>

        <Border Grid.Row="4"
                Width="200">
            <Button x:Name="RftButonCreareContNou"
                    Content="Creare Cont"
                    TabIndex="2"
                    Margin="25 0 0 0"
                    SnapsToDevicePixels="True"
                    Command="{Binding RftComandaCreareContNou}"
                    Style="{StaticResource RftStilButonCreareContNou}" />
        </Border>

        <TextBlock x:Name="RftMesajCreareContNou"
                   Text="{Binding RftMesajStareCreareContNou}"
                   TextAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   Grid.Row="6"
                   Foreground="{StaticResource RftPerieAutentificareFundalGeneral}">
            <TextBlock.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding = "{Binding Text, 
                            ElementName=RftMesajCreareContNou,
                            Converter={StaticResource RftConvertorLungimeText}}"
                                     Value = "true">
                            <Setter Property="TextBlock.Background">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#ff3333" Offset="0"/>
                                        <GradientStop Color="#000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>
