    <Style x:Key="RftStilGrilaMeniuTop"
           TargetType="Grid">
        <Setter Property="Background"
                Value="{DynamicResource RftPerieFundalMeniuTop}"/>

        <Setter Property="Height"
                Value="30"/>

        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="20"
                                  Color="{DynamicResource RftCuloarePrimPlanGeneral}"
                                  Opacity="0.5"
                                  ShadowDepth="5"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RftStilMeniu"
           TargetType="Menu">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Menu}">
                    <Border x:Name="RftGranita"
                            Background="#7c7c7c"
                            BorderBrush="#7c7c7c"
                            Cursor="Hand"
                            Height="30"
                            Width="165"
                            VerticalAlignment="Center"
                            BorderThickness="10 0 0 0">
                        <Border.RenderTransform>
                            <SkewTransform AngleX="-25"/>
                        </Border.RenderTransform>

                        <StackPanel ClipToBounds="True"
                                    Orientation="Horizontal"
                                    IsItemsHost="True">
                            <StackPanel.RenderTransform>
                                <SkewTransform AngleX="25"/>
                            </StackPanel.RenderTransform>
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Button.IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    TargetName="RftGranita">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#7c7c7c" Offset="0"/>
                                        <GradientStop Color="#000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RftMeniuArticolTop"
           TargetType="MenuItem">
        <Setter Property="Foreground"
                Value="{DynamicResource RftPerieFundalConstatntaDeschisa}"/>
        <Setter Property="FontFamily"
                Value="Verdana"/>
        <Setter Property="FontSize"
                Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <Border Width="100"
                            VerticalAlignment="Center">
                        <Grid>
                            <TextBlock Text="{TemplateBinding Header}"
                                       Width="100"
                                       TextAlignment="Center"/>
                            <Popup Placement="Bottom"
                                   IsOpen="{TemplateBinding IsSubmenuOpen}"
                                   Focusable="False"
                                   PopupAnimation="Fade">
                                <Border BorderThickness="0"
                                        Width="250">
                                    <Border.RenderTransform>
                                        <TranslateTransform X="-125" Y="-5"/>
                                    </Border.RenderTransform>
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="Transparent" />
                                    </Border.BorderBrush>
                                    <StackPanel IsItemsHost="True">
                                        <StackPanel.Background>
                                            <LinearGradientBrush>
                                                <GradientStop Color="#7c7c7c" Offset="0"/>
                                                <GradientStop Color="#000000" Offset="1"/>
                                            </LinearGradientBrush>
                                        </StackPanel.Background>
                                        <StackPanel.RenderTransform>
                                            <TranslateTransform X="125" Y="5"/>
                                        </StackPanel.RenderTransform>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

