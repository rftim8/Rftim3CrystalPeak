<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="RftCuloareFundalConstantaDeschisa">#ffffff</Color>

    <SolidColorBrush x:Key="RftPerieFundalConstatntaDeschisa" Color="{StaticResource RftCuloareFundalConstantaDeschisa}"/>

    <Style x:Key="RftStilMeniuStanga"
           TargetType="Grid">
        <Setter Property="Background"
                Value="{StaticResource RftPerieFundalMeniuStanga}"/>

        <Setter Property="Margin"
                Value="0 20 0 20"/>

        <Setter Property="Width"
                Value="250"/>

        <Setter Property="Panel.ZIndex"
                Value="1"/>

        <Setter Property="HorizontalAlignment"
                Value="Left"/>

        <Setter Property="Grid.RenderTransform">
            <Setter.Value>
                <TranslateTransform X="-200"
                                    Y="0"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>