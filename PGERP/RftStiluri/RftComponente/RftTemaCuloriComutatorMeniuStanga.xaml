<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="RftStilComutatorMeniuStanga"
           TargetType="ToggleButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border Background="{StaticResource RftPerieFundalMeniuStanga}">
                        <ToggleButton x:Name="RftComutator"
                                      Cursor="Hand">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="RftGranita">
                                                    <Image Height="30"
                                                           Width="30"
                                                           Source="{DynamicResource RftSursaImagineComutatorMeniuStanga}"/>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="ToggleButton.IsMouseOver"
                                                                 Value="True">
                                                        <Setter Property="Background"
                                                                    TargetName="RftGranita">
                                                            <Setter.Value>
                                                                <RadialGradientBrush GradientOrigin="0.5 0.5"
                                                                                     Center="0.5 0.5"
                                                                                     RadiusX="0.5"
                                                                                     RadiusY="0.5"
                                                                                     Opacity="0.5">
                                                                    <GradientStop Color="{DynamicResource RftCuloareFundalGeneral}" Offset="0"/>
                                                                    <GradientStop Color="{DynamicResource RftCuloareFundalGeneral}" Offset="0.5"/>
                                                                    <GradientStop Color="{DynamicResource RftCuloareFundalGeneral}" Offset="0.75"/>
                                                                    <GradientStop Color="Transparent" Offset="1"/>
                                                                </RadialGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>

                                                    <Trigger Property="ToggleButton.IsChecked"
                                                             Value="True">
                                                        <Setter Property="Background"
                                                                TargetName="RftGranita">
                                                            <Setter.Value>
                                                                <RadialGradientBrush GradientOrigin="0.5 0.5"
                                                                                     Center="0.5 0.5"
                                                                                     RadiusX="0.5"
                                                                                     RadiusY="0.5"
                                                                                     Opacity="0.5">
                                                                    <GradientStop Color="{DynamicResource RftCuloareFundalGeneral}" Offset="0"/>
                                                                    <GradientStop Color="{DynamicResource RftCuloareFundalGeneral}" Offset="0.5"/>
                                                                    <GradientStop Color="Transparent" Offset="1"/>
                                                                </RadialGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RftStilComponentaMeniuStanga"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="14"/>

        <Setter Property="Foreground"
                Value="{StaticResource RftPerieFundalConstatntaDeschisa}"/>

        <Setter Property="HorizontalAlignment"
                Value="Left"/>

        <Setter Property="Margin"
                Value="35 0 0 0"/>

        <Setter Property="VerticalAlignment"
                Value="Center"/>
    </Style>
</ResourceDictionary>