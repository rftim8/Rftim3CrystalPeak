<Window x:Class="Rftim3Editor.GameProject.ProjectBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rftim3Editor.GameProject"
        mc:Ignorable="d"
        Title="Project Browser"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="600" 
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Margin="20">
            <ToggleButton Content="Open Project"
                          x:Name="openProjectButton"
                          Click="OnToggleButton_Click"
                          IsChecked="True"
                          FontSize="32"/>
            <ToggleButton Content="Create Project"
                          x:Name="createProjectButton"
                          Click="OnToggleButton_Click"
                          IsChecked="False"
                          FontSize="32"
                          Margin="30,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    x:Name="BrowserContent"
                    Grid.Row="1">
            <local:OpenProjectView/>
            <local:NewProjectView/>
        </StackPanel>
    </Grid>
</Window>
