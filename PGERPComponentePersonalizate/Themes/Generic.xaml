<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PGERPComponentePersonalizate">

    <Style TargetType="{x:Type local:RftComponentaPersonalizataButonMeniuTop}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RftComponentaPersonalizataButonMeniuTop}">
                    <Border x:Name="RftGranita"
                            Background="#7c7c7c"
                            BorderBrush="#7c7c7c"
                            Cursor="Hand"
                            Height="30"
                            Width="165"
                            VerticalAlignment="Center"
                            BorderThickness="10 0 0 0">
                        <Border.RenderTransform>
                            <SkewTransform AngleX="-25"/>
                        </Border.RenderTransform>

                        <DockPanel>
                            <DockPanel.RenderTransform>
                                <SkewTransform AngleX="25"/>
                            </DockPanel.RenderTransform>

                            <Image x:Name="RftButonImagine"
                                   DockPanel.Dock="Left"
                                   Width="15"
                                   Height="15"
                                   Margin="5 0 10 0"
                                   Source="{TemplateBinding ImageSource}">
                            </Image>

                            <TextBlock x:Name="RftButonText"
                                       DockPanel.Dock="Right"
                                       FontSize="16"
                                       Foreground="#ffffff"
                                       TextAlignment="Left"
                                       Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center">
                            </TextBlock>
                        </DockPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Button.IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    TargetName="RftGranita">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#7c7c7c" Offset="0"/>
                                        <GradientStop Color="#000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:RftComponentaPersonalizataButonUtilitar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RftComponentaPersonalizataButonUtilitar}">
                    <Border x:Name="RftGranita"
                            Background="Transparent"
                            BorderBrush="#ff0000"
                            BorderThickness="10 0 0 0"
                            Cursor="Hand"
                            Height="30"
                            HorizontalAlignment="Center"
                            Width="50"
                            VerticalAlignment="Center">
                        <Border.RenderTransform>
                            <SkewTransform AngleX="-25"/>
                        </Border.RenderTransform>

                        <Image x:Name="RftImagine"
                               Height="15"
                               Width="15"
                               HorizontalAlignment="Left"
                               Margin="8 0 0 0"
                               Source="{TemplateBinding ImageSource}">
                            <Image.RenderTransform>
                                <SkewTransform AngleX="25"/>
                            </Image.RenderTransform>
                        </Image>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Button.IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    TargetName="RftGranita">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#ff0000" Offset="0"/>
                                        <GradientStop Color="#000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

