                            </TextBlock>
                        </DockPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Button.IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    TargetName="RftGranita">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#7c7c7c" Offset="0"/>
                                        <GradientStop Color="#000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:RftComponentaPersonalizataVedereModificari}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RftComponentaPersonalizataVedereModificari}">
                    <ControlTemplate.Resources>
                        <BooleanToVisibilityConverter x:Key="RftConvertorVizibilitate"/>
                    </ControlTemplate.Resources>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Visibility="{TemplateBinding IsOpen,
                        Converter={StaticResource RftConvertorVizibilitate}}">
                        <ContentControl Content="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

