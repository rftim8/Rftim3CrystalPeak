                            Height="30"
                            HorizontalAlignment="Center"
                            Width="50"
                            VerticalAlignment="Center">
                        <Border.RenderTransform>
                            <SkewTransform AngleX="-25"/>
                        </Border.RenderTransform>

                        <Image x:Name="RftImagine"
                               Height="15"
                               Width="15"
                               HorizontalAlignment="Left"
                               Margin="8 0 0 0"
                               Source="{TemplateBinding ImageSource}">
                            <Image.RenderTransform>
                                <SkewTransform AngleX="25"/>
                            </Image.RenderTransform>
                        </Image>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Button.IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    TargetName="RftGranita">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#c9c9c9" Offset="0"/>
                                        <GradientStop Color="#000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:RftComponentaPersonalizataButonRadioImagine}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RftComponentaPersonalizataButonRadioImagine}">
                    <Border x:Name="RftGranita"
                            Cursor="Hand">
                        <Image Height="32"
                               Width="32"
                               Source="{TemplateBinding ImageSource}"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="RadioButton.IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    TargetName="RftGranita">
                                <Setter.Value>
                                    <RadialGradientBrush GradientOrigin="0.5 0.5"
                                                         Center="0.5 0.5"
                                                         RadiusX="0.5"
                                                         RadiusY="0.5"
                                                         Opacity="0.5">
                                        <GradientStop Color="#ffc400" Offset="0"/>
                                        <GradientStop Color="#ffc400" Offset="0.5"/>
                                        <GradientStop Color="#ffc400" Offset="0.75"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="RadioButton.IsChecked"
                                 Value="True">
                            <Setter Property="Background"
                                    TargetName="RftGranita">
                                <Setter.Value>
                                    <RadialGradientBrush GradientOrigin="0.5 0.5"
                                                         Center="0.5 0.5"
                                                         RadiusX="0.5"
                                                         RadiusY="0.5"
                                                         Opacity="0.5">
                                        <GradientStop Color="#ffc400" Offset="0"/>
                                        <GradientStop Color="#ffc400" Offset="0.5"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:RftComponentaPersonalizataButonTimp}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RftComponentaPersonalizataButonTimp}">
                    <Border x:Name="RftGranita"
                            Background="#7c7c7c"
                            BorderBrush="#7c7c7c"
                            Cursor="Hand"
                            Height="30"
                            Width="250"
                            VerticalAlignment="Center"
                            BorderThickness="10 0 0 0">
                        <Border.RenderTransform>
                            <SkewTransform AngleX="-25"/>
                        </Border.RenderTransform>

                        <DockPanel>
                            <DockPanel.RenderTransform>
                                <SkewTransform AngleX="25"/>
                            </DockPanel.RenderTransform>

                            <TextBlock x:Name="RftButonText"
                                       DockPanel.Dock="Right"
                                       FontSize="16"
                                       Padding="0 0 20 0"
                                       Foreground="#ffffff"
                                       TextAlignment="Center"
                                       Text="{TemplateBinding Content}"
