            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RftComponentaPersonalizataEtichetaModificari}">
                    <Border x:Name="RftGranita"
                            Background="#7c7c7c"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Cursor="Hand"
                            Height="30"
                            Width="{TemplateBinding Width}"
                            VerticalAlignment="Center"
                            BorderThickness="10 0 0 0">
